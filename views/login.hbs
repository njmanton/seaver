<form action="/login" method="post">
  
  <div class="form-group">
    <label for="username">
      Username
      <input type="text" class="form-control" id="username" name="username" maxlength="30" required placeholder="username" />
    </label> 
  </div>
  <div class="form-group">
    <label for="password">
      Password
      <input type="password" class="form-control" id="password" name="password" maxlength="30" required placeholder="password" />
    </label>    
  </div>  
  <button type="submit" class="btn btn-default">Login</button>
  
</form>