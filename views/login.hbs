<form action="/login" method="post">
  
  <fieldset>
    
    <label for="username">
      Username
      <input type="text" id="username" name="username" maxlength="30" required placeholder="" />
    </label>
    
    <label for="password">
      Password
      <input type="password" id="password" name="password" maxlength="30" required placeholder="" />
    </label>
  
  </fieldset>
  
  <input type="submit" name="submit" value="login" />
  
</form>